@{
        Layout = "~/Views/Shared/_Layout.cshtml";
}

@*
    I need:
    SenderId,
    AccountId,
    Amount

    Bu değişkenlerin olduğu bir Model oluşturdum --> SendMoneyModel.cs
*@
<div class="mt-3">

    <form asp-action="SendMoney" asp-controller="Account" method="post">
    <input type="hidden" name="SenderId" value="@ViewBag.SenderId"/>
    <div class="mb-3">
        <label>Göndereceğiniz Hesap Numarasını Giriniz: </label>
            <select class="form-select" asp-items="@Model" aria-label="Default select example" name="AccountId">
</select>
    </div>
    <div class="mb-3">
        <label>Göndereceğiniz Tutar:</label>
            <input type="number" name="Amount" class="form-control"/>

    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Para Gönder</button>
    </div>

</form>

</div>


